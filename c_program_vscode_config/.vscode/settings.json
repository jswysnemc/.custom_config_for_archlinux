{
    "code-runner.executorMap": {
        "c": "make && ./bin/main"
    },
    "code-runner.runInTerminal": true,
    "clangd.fallbackFlags": [
        // 设置clangd代码检查的c++版本，目前默认是c++14
        // "-std=c++2a",
        "-I${workspaceFolder}", // 项目根目录
        "-I${workspaceFolder}/src/include"
    ],
}